.panel.panel-default.panel-form
	.panel-heading
		%h3= @user.full_name
		= link_to 'Edit', referrer_edit_path(@user.id)
	.panel-body
		.referrer-profile-buttons
			%span.referrer-profile-button
				= button_to 'Approve', mark_referrer_status_path(:status => "Approved"), {:method => 'post'}
			%span.referrer-profile-button
				= button_to 'Reject', mark_referrer_status_path(:status => "Rejected"), {:method => 'post'}
			%span.referrer-profile-button
				= button_to 'Incomplete', mark_referrer_status_path(:status => "Incomplete"), {:method => 'post'}
		%div
			- @form_hash.each do |key, value|
				.referrer-info
					%div.form-question
						= key + ":"
					%div.form-response
						- if value.instance_of?(Array)
							= value.join(', ')
						- else
							= value

