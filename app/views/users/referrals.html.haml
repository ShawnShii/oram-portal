%h1#client_list_title Clients
%table#clients
  %thead
    %tr
      %th First Name
      %th Last Name
      %th= select_tag "status",
            options_for_select(["Status", "Incomplete", "Approved", "Rejected"], @status),
            id: 'select_button',
            class: 'filter',
            :onchange => "filter_by_status(this.value)"
      -# %th
  %tbody
    - @clients.each do |client|
      %tr
        %td.first_name= client.first_name
        %td.last_name= client.last_name
        %td.status= client.status
        -# %td
        -# %td.more_info= link_to "View Profile", client_path(client)
