%h1#referral_list_title Referrals
%table#referrals
  %thead
    %tr
      %th First Name
      %th Last Name
      %th= select_tag "status",
            options_for_select(["Status", "Incomplete", "Approved", "Rejected"], @status),
            id: 'select_button',
            class: 'filter',
            :onchange => "filter_by_status(this.value)"
      %th
  %tbody
    - @referrals.each do |referral|
      %tr
        %td.first_name= referral.first_name
        %td.last_name= referral.last_name
        %td.status= referral.status
        %td
        -# %td.more_info= link_to "View Profile", client_path(client)
