%h1#referrer_list_title Referrers
%table#referrers
  %thead
    %tr
      %th First Name
      %th Last Name
      %th
  %tbody
    -[1, 2, 3, 4, 5].each do |num|
      %tr
        %td.first_name= "Test First Name " + num.to_s
        %td.last_name= "Test Last Name " + num.to_s
        %td.more_info= link_to "View profile"

    - @referrers.each do |referrer|
      %tr
        %td.first_name= referrer.first_name
        %td.last_name= referrer.last_name
        %td.more_info= link_to "More Info", referrer_profile_path(referrer)
