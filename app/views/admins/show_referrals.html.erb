<div id="events">
  <h1>Referrals</h1>
  
  <!-- Responsive table starts here -->
  <!-- For correct display on small screens you must add 'data-title' to each 'td' in your table -->
  <div class="table-responsive-vertical shadow-z-1">
  <!-- Table starts here --> 
  <table id="table" class="table table-striped table-mc-light-blue">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Status</th>
          <th>Profile</th>
        </tr>
      </thead>
      <tbody>
      	<% @forms.each do |form| %>
			<tr>
				<td><%= if !form.nil?  then form.first_name end %></td>
				<td><%= if !form.nil?  then form.last_name end%></td>
				<td><%= if !form.nil?  then form.status end%></td>
				<td><%= link_to "View Profile", referral_path(form) %></td>
			</tr>
		<% end %>
      </tbody>
    </table>
  </div>
</div>

