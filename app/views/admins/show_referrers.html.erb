<div id="events">
  <h1>Referrers</h1>
  
  <!-- Responsive table starts here -->
  <!-- For correct display on small screens you must add 'data-title' to each 'td' in your table -->
  <div class="table-responsive-vertical shadow-z-1">
  <!-- Table starts here --> 
  <table id="table" class="table table-striped table-mc-light-blue">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th><%=  if @curr_admin == 'central'  then 
          	select_tag "status",
            options_for_select(["Status", "Incomplete", "Complete", "Approved", "Rejected"], @status),
            id: 'select_button',
            class: 'filter',
            :onchange => "filter_by_status(this.value)"
          end%>Status</th>
          <th>Profile</th>
        </tr>
      </thead>
      <tbody>
      	<% @referrers.each do |referrer| %>
			<tr>
				<td><%= if !referrer.nil?  then referrer.first_name end %></td>
				<td><%= if !referrer.nil?  then referrer.last_name end%></td>
				<td><%= if @curr_admin.role == 'central'  then referrer.status end%></td>
				<td><%= link_to "View Profile", referrer_path(referrer.id) %></td>
			</tr>
		<% end %>
      </tbody>
    </table>
  </div>
</div>

